{
  "name": "@anissoft/state-react",
  "version": "1.0.0",
  "description": "React integration of @anissoft/state",
  "keywords": [
    "state",
    "react",
    "hook"
  ],
  "author": "Alexey <Anisimov>",
  "homepage": "https://github.com/Anissoft/js-libs#readme",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "scripts": {
    "build": "rimraf ./lib && tsc",
    "prepare": "npm run build",
    "test": "jest --env=jsdom --silent",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "jest --watch --env=jsdom"
  },
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Anissoft/js-libs.git"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "jsdom",
    "testRegex": ".*\\.(test|spec)\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "!**/*.test.(ts|tsx)",
      "src/**/*"
    ]
  },
  "bugs": {
    "url": "https://github.com/Anissoft/js-libs/issues"
  },
  "peerDependencies": {
    "react": "^17.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.3",
    "@testing-library/react": "^11.2.2",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^26.0.16",
    "jest": "^26.6.3",
    "jest-config": "^25.5.3",
    "prettier": "^2.2.1",
    "react-test-renderer": "^17.0.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.4.1",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@anissoft/state": "^1.0.0"
  }
}
