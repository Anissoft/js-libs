{
  "name": "@anissoft/react-hooks",
  "version": "1.3.5",
  "description": "Bunch of react hooks ",
  "keywords": [
    "react",
    "hooks"
  ],
  "author": "Alexey <Anisimov>",
  "homepage": "https://github.com/Anissoft/js-libs#readme",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "main": "lib/react-hooks.js",
  "typings": "lib/react-hooks",
  "scripts": {
    "build": "rimraf ./lib && tsc",
    "prepare": "npm run build",
    "prepublish": "npm run test:coverage",
    "test": "jest --env=jsdom",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "jest --watch --env=jsdom"
  },
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib",
    "src",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Anissoft/js-libs.git"
  },
  "bugs": {
    "url": "https://github.com/Anissoft/js-libs/issues"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "jsdom",
    "testRegex": ".*\\.(test|spec)\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/utils/",
      "react-hooks.ts",
      "useTabFocus.ts",
      "useViewportSize.ts",
      "useQueryParameter.ts",
      "useQueryParameters.ts",
      "useDocumentCookie.ts",
      "useDocumentCookies.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "!**/*.test.(ts|tsx)",
      "src/**/*"
    ]
  },
  "peerDependencies": {
    "react": "^17.0.2"
  },
  "gitHead": "32dff233758cfa66cc57a55f374e16e7664c2d16"
}
